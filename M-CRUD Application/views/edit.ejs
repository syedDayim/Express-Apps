<%- include('./partials/header.ejs') %> 

<div class="container mt-5 p-5" style="background-color: #1b1b1b; border-radius: 15px; box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);">
    <div class="row">
        <div class="col-sm-12">
            <h2 class="text-light mb-4">Edit Entry</h2>
            <form method="post" action="/update/<%= result._id %>">
                <div class="mb-3">
                    <label for="editName" class="form-label text-light">Name</label>
                    <input type="text" class="form-control bg-dark text-light" id="editName" name="name" value="<%= result.name %>">
                </div>
                <div class="mb-3">
                    <label for="editAge" class="form-label text-light">Age</label>
                    <input type="text" class="form-control bg-dark text-light" id="editAge" name="age" value="<%= result.age %>">
                </div>
                <div class="mb-3">
                    <label for="editFees" class="form-label text-light">Fees</label>
                    <input type="text" class="form-control bg-dark text-light" id="editFees" name="fees" value="<%= result.fees %>">
                </div>
                <button type="submit" class="btn btn-outline-light">Save Changes</button>
                <button type="button" class="btn btn-outline-secondary" onclick="window.history.back();">Cancel</button>
            </form>
        </div>
    </div>
</div>

<%- include('./partials/footer.ejs') %> 

<style>
    body {
        background-color: #121212;
        font-family: 'Roboto', sans-serif;
    }
    h2 {
        font-weight: 700;
    }
    .container {
        padding: 40px;
    }
    .form-control, .btn {
        border-radius: 25px;
    }
    .form-control {
        border: 1px solid #444;
    }
    .btn-outline-light {
        border: 1px solid #fff;
    }
    .btn-outline-secondary {
        border: 1px solid #6c757d;
        color: #6c757d;
    }
    .btn-outline-secondary:hover {
        background-color: #6c757d;
        color: #fff;
    }
</style>
